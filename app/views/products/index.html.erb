<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Foto</th>
      <th>Nome</th>
      <th>Ingredienti</th>
      <th>Prezzo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <% if product.foto.attached? %>
            <%= image_tag url_for(product.foto), style: 'width: 200px' %>
          <% end %>
        </td>
        <td><%= product.nome %></td>
        <td><%= product.ingredienti %></td>
        <td><%= product.prezzo %></td>
        <td><%= link_to 'Mostra', product, class: 'btn btn-sm btn-primary'%></td>
        <td><%= link_to 'Edita', edit_product_path(product), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Cancella', product, method: :delete, data: { confirm: 'Sei sicuro?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo prodotto', new_product_path , class: 'btn btn-primary w-100' %>
